{% extends '@AcmeAdmin/Company/base.html.twig' %}
    {% block box %}
        <div class="col-md-6">
            {{ form_start(form) }}
            <div class="form-group">
                {% if company.logo!='' %}
                    <img src="{{ asset(company.getWebPath)|imagine_filter('company_thumb_front') }}?{{ date().timestamp }}"/><br/>
                    <a href="{{ url('admin_company_delete_logo', {'id':company.id}) }}">Usu≈Ñ logo</a>
                    <br/>
                {% endif %}
                {{ form_label(form.file_image, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.file_image, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group {% if form.name.vars.valid==false %}has-error{% endif %}">
                {{ form_label(form.name, null, {'label_attr': {'class': 'control-label'}}) }}
