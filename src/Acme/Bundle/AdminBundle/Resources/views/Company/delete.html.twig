{% extends 'AcmeAdminBundle::layout.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Usuwanie firmy</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <div class="box-body">
                    {{ form_errors(form) }}
                    Czy na pewno skasować firmę <b>{{ company.name }}</b>?
                    {{ form_start(form)  }}
                        {{ form_widget(form.delete, {'attr': {'class': 'btn btn-danger'}})  }}
                    {{ form_end(form) }}

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
{% endblock %}
