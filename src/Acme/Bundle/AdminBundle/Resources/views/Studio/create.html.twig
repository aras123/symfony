{% extends 'AcmeAdminBundle::layout.html.twig' %}
{% block content %}
<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <div class="pull-left">
                    <h3 class="box-title">Dodaj studio</h3>
                </div>
                <div class="pull-right">
                   {% if company is defined %}<button class="btn btn-warning" onclick="return autofill_company_form();">UZUPE≈ÅNIJ DANYMI FIRMY</button>{% endif %}
                </div>
            </div><!-- /.box-header -->
            <!-- form start -->
            <div class="box-body">
                {{ form_start(form) }}
                <div class="form-group {% if form.idCompany.vars.valid==false %}has-error{% endif %}">
                    {{ form_label(form.idCompany, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.idCompany, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block">{{ form_errors(form.idCompany) }}</span>
                </div>
                <div class="form-group {% if form.phone.vars.valid==false %}has-error{% endif %}">
                    {{ form_label(form.phone, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block">{{ form_errors(form.phone) }}</span>
                </div>
                <div class="form-group {% if form.email.vars.valid==false %}has-error{% endif %}">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block">{{ form_errors(form.email) }}</span>
                </div>
                <div class="form-group {% if form.website.vars.valid==false %}has-error{% endif %}">
                    {{ form_label(form.website, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.website, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block">{{ form_errors(form.website) }}</span>
                </div>
                <hr class="separate"/>
                <div class="form-group {% if form.street.vars.valid==false %}has-error{% endif %}">
                    {{ form_label(form.street, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.street, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block">{{ form_errors(form.street) }}</span>
                </div>
                <div class="form-group {% if form.home.vars.valid==false %}has-error{% endif %}">
                    {{ form_label(form.home, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.home, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block">{{ form_errors(form.home) }}</span>
                </div>
                <div class="form-group {% if form.zipcode.vars.valid==false %}has-error{% endif %}">
                    {{ form_label(form.zipcode, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.zipcode, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block">{{ form_errors(form.zipcode) }}</span>
                </div>
                <div class="form-group {% if form.city.vars.valid==false %}has-error{% endif %}">
                    {{ form_label(form.city, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block">{{ form_errors(form.city) }}</span>
                </div>
                <div class="form-group {% if form.county.vars.valid==false %}has-error{% endif %}">
                    {{ form_label(form.county, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.county, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block">{{ form_errors(form.county) }}</span>
                </div>
                <hr class="separate"/>
                <div class="form-group {% if form.description.vars.valid==false %}has-error{% endif %}">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    <span class="help-block">{{ form_errors(form.description) }}</span>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}})  }}
                    <div>
                    <label class="required"></label> - pola wymagane
                </div>
                </div>
                {{ form_end(form) }}
            </div><!-- /.box -->
        </div>
    </div>
    {% if company is defined %}
        <script>
            function autofill_company_form()
            {
                $('#acme_admin_bundle_company_type_phone').val('{{company.phone}}');
                $('#acme_admin_bundle_company_type_email').val('{{company.email}}');
                $('#acme_admin_bundle_company_type_website').val('{{company.website}}');
                $('#acme_admin_bundle_company_type_street').val('{{company.street}}');
                $('#acme_admin_bundle_company_type_home').val('{{company.home}}');
                $('#acme_admin_bundle_company_type_zipcode').val('{{company.zipcode}}');
                $('#acme_admin_bundle_company_type_city').val('{{company.city}}');
                $('#acme_admin_bundle_company_type_county').val('{{company.county}}');
                $('#acme_admin_bundle_company_type_idCompany').val('{{company.id}}');
            }
        </script>
    {% endif %}
{% endblock %}