{% extends '@AcmeAdmin/Studio/base.html.twig' %}
{% block box %}
<div class="row">
    <div class="col-lg-12">
        <a href="{{ url('admin_studio_albums',{'id':studio.id}) }}" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i> Wróć do listy Albumów</a>
        <hr/>
    </div>
    <div class="col-lg-6 col-xs-8">
        {{ form_start(form) }}
        <div class="form-group {% if form.name.vars.valid==false %}has-error{% endif %}">
            {{ form_label(form.name, null, {'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            <span class="help-block">{{ form_errors(form.name) }}</span>
        </div>
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        <div>
                        <label class="required"></label> - pola wymagane
                    </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}