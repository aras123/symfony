{% extends 'AcmeAdminBundle::layout.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nazwa</th>
                        <th>Data dodania</th>
                        <th>Ostatnia modyfikacja</th>
                        <th style="width:85px;">Akcja</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in blog %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ post.name }}</td>
                            <td>{{ post.dateAdd|date("Y-m-d H:i:s") }}</td>
                            <td>{{ post.dateUpdate|date("Y-m-d H:i:s") }}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ url('admin_blog_edit',{'id':post.id}) }}" class="btn btn-default btn-sm" title="Edytuj"><i class="fa fa-edit"></i></a>
                                    <a href="{{ url('admin_blog_delete',{'id':post.id}) }}" class="btn btn-default btn-sm" title="UsuÅ„"><i class="fa fa-trash-o"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
                    </div>
                </div>

        </div>
    </div>
{% endblock %}