{% extends 'AcmeFrontBundle::layout.html.twig' %}
{% block content %}
<div class="container">
    <div class="row listings-items-wrapper">
        <div class="title-box">
          <h3>Producenci urządzeń kuchennych</h3>
          <div class="bordered">
          </div>
      </div>
        {% for brand in pagination %}
        <div class="col-md-3 listing-single-item">
            <div class="item-inner">

                <div class="desc-box">
                	<center><a href="{{ url('front_brand-device_brand',{'slug':brand.slug}) }}" title="Producent {{ brand.name }}"><img src="{{ asset(brand.getWebPath)|imagine_filter('thumb_0x50') }}" class="img-responsive" alt="Producent {{ brand.name }}"></a></center>

                    <ul class="slide-item-features item-features">
                        <li>
                            <span class="fa fa-info"></span>{{ brand.name }} | Studia: {{ brand.studioBrandDevice|length }}
                        </li>
                    </ul>
                    <div class="buttons-wrapper">
                        <a href="{{ url('front_brand-device_brand',{'slug':brand.slug}) }}" title="{{ brand.name }}" class="yellow-btn" title="Producent {{ brand.name }}">Zobacz</a>
                    </div>
                    <div class="clearfix">
                    </div>
                </div>
            </div>
        </div>
        <!-- /Single-item -->
        {% endfor %}
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="pagination-wrapper">
            <div class="pagination">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="alert alert-info text-center">
          Brakuje jakiegoś producenta? <a href="{{ url('front_contact') }}" title="Napisz do studiakuchenne.pl"><strong>Napisz nam o tym!</strong></a>
        </div>
      </div>
    </div>
</div>
{% endblock %}
